*
*:before
*:after
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

html
body
h1, h2, h3, h4, h5, h6
  margin 0
  padding 0

a
  color inherit
  text-decoration none

body
  background #1ABC9C

#react-root
  width 400px
  height 600px
  margin 20px auto

.section
  padding 0 20px

.header
  background #232323

.CircularProgress-Bg
.CircularProgress-Fg
  fill: none

.CircularProgress-Bg
  stroke: #555555


.CircularProgress-Fg
  transition: stroke-dashoffset .5s ease-in-out
  stroke: #76AD42

.CircularProgress-Text
  font-family: sans-serif
  font-size: 30px
  fill: #76AD42
  transform: translate(0 50%)

.main
  background #343434
  float left
  padding-bottom 10px

.item
  width 100%
  float left
  margin 10px 0 0 0

.item__action
  float left
  width 40px

  label
    width 100%
    float left
    cursor pointer

    &.done
      &:before
        position absolute
        content url('../img/icons/done.svg')

    &.edit
      &:before
        position absolute
        content url('../img/icons/edit.svg')

    &.delete
      &:before
        position absolute
        content url('../img/icons/delete.svg')

    input[type="checkbox"]
      opacity 0
      height 30px
      cursor pointer

.item__content
  background #424242
  float left
  width 320px
