*
*:before
*:after
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

html
body
h1, h2, h3, h4, h5, h6
  margin 0
  padding 0

a
  color inherit
  text-decoration none

body
  background #1ABC9C

#react-root
  width 400px
  height 600px
  margin 20px auto

.section
  padding 0 20px

.header
  background #232323

.CircularProgress-Bg,
.CircularProgress-Fg {
    fill: none;
}

.CircularProgress-Bg {
    stroke: #555555;
}

.CircularProgress-Fg {
    transition: stroke-dashoffset .5s ease-in-out;
    stroke: #76AD42;
}

.CircularProgress-Text {
    font-family: sans-serif;
    font-size: 30px;
    fill: #76AD42;

    transform: translate(0 50%);
}